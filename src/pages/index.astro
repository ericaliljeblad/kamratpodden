---
import fetch from 'node-fetch';
import PageLayout from '../layouts/PageLayout.astro';
import BlogList from '../components/BlogList.astro';
import PodcastEpisodes from '../components/PodcastEpisodes.astro';
// Component Script:
// You can write any JavaScript/TypeScript that you'd like here.
// It will run during the build, but never in the browser.
// All variables are available to use in the HTML template below.

// Data Fetching: List all Markdown posts in the repo.

let allPosts = await Astro.glob('./posts/*.md');
allPosts = allPosts.sort((a, b) => new Date(b.frontmatter.publishDate).valueOf() - new Date(a.frontmatter.publishDate).valueOf()).slice(0, 3);

let episodes = {}
try {
	const response = await fetch(`${import.meta.env.SITE_URL}/.netlify/functions/spotify`)

	if (response.ok) {
		episodes = await response.json()
	}
} catch {
	console.log("ERROR")
}


