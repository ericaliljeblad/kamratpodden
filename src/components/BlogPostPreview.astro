---
import H2 from '../components/H2.astro'

const { post, large } = Astro.props;
---

<article class={`post-preview ${large && 'large'}`}>
	<a href={post.url}>
		<!-- <img src="/assets/blog/317575099_149334201183788_2298528759472121366_n.jpeg" /> -->
		<div class="image-wrapper">
			<img src={post.frontmatter.previewImage} />
		</div>
		<div class="text">
			<header class="preview-header">
				<H2 large={large}>{post.frontmatter.title}</H2>
				<p class="publish-date">{post.frontmatter.publishDate}, {post.frontmatter.author}</p>
			</header>
			<p>{post.frontmatter.description}</p>
			<p class="link">Läs hela inlägget</p>
		</div>
	</a>
</article>

<style>

	.post-preview {
		background: white;
		margin-bottom: 3rem;
	}

	@media (min-width: 37.75em) {
		.post-preview {
			margin-bottom: 2rem;
			border: 1px solid var(--theme-divider);
		}

		.post-preview a {
			display: block;
			padding: 1rem;
		}

		.post-preview.large {
			width: 100%;
			grid-column: 1 / -1;
			/* background: var(--color-blue);;
			padding: 0;
			color: #fff; */
		}

		.post-preview.large a {
			display: flex;
			align-items: flex-start;
			gap: 20px;
		}

		.post-preview.large .image-wrapper {
			aspect-ratio: 1.4;
		}

		/* .post-preview:first-child p,
		.post-preview:first-child .publish-date,
		.post-preview:first-child .author,
		.post-preview:first-child .title {
			color: #fff;
		} */

		.post-preview.large .image-wrapper {
			width: calc(50% - 10px - 1rem);
		}

		.post-preview.large .preview-header {
			padding: 2rem 0;
		}
	}

	.post-preview a {
		opacity: 0.8;
		transition: all 0.3s ease;
	}

	.post-preview a:hover {
		text-decoration: none;
		opacity: 1;
		box-shadow: 0 0 12px 3px var(--color-gray-200);
	}

	.post-preview a:focus {
		text-decoration: none;
		outline: none;
		box-shadow: 0 0 12px 3px var(--theme-divider);
	}

	.post-preview a:hover img {
		transform: scale(1.025);
	}

	.post-preview .image-wrapper {
		flex-shrink: 0;
    width: 100%;
		overflow: hidden;
		aspect-ratio: 1.9;
		background: rgb(240, 240, 240);
	}

	.post-preview img {
    object-fit: cover;
		transition: transform 0.4s ease;
		min-width: 100%;
    min-height: 100%;
	}

	.post-preview p {
		color: var(--theme-text);
	}

	.post-preview .link {
		margin-top: 20px;

		color: var(--color-orange);
	}

	.preview-header {
		padding: 1rem 0;
	}

	.title,
	.author,
	.publish-date {
		margin: 0;
	}

	.publish-date,
	.author {
		font-size: 0.9rem;
		color: var(--theme-text-light);
		text-transform: uppercase;
    color: #888;
    font-size: 12px;
    letter-spacing: 0.15px;
    font-weight: bold;
    margin-top: 10px;
	}
</style>
