---
import H2 from '../components/H2.astro';
import Button from '../components/Button.astro';
import PlayButton from './PlayButton.jsx';

const { episode } = Astro.props;

---

<style lang="scss">
  .episode {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .header {
    display: flex;
    align-items: center;
    gap: 20px;
  }

  .body {
    display: flex;
    flex-direction: column;
    gap: 20px;
    align-items: flex-start;
  }

  .buttons {
    display: flex;
    flex-direction: column;
    gap: 10px;

    @media (min-width: 1230px) {
      flex-direction: row;
    }
  }

  .description {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    font-size: 14px;
  }

  .image {
    display: flex;
    flex-shrink: 0;
    border-radius: 6px;
    overflow: hidden;

    img {
      width: 100px;
      height: 100px;
    }
  }
</style>

<div class="episode">
  <div class="header">
    <div class="image">
      <img src={episode.images[0].url} />
    </div>
    <H2 negative>{episode.name}</H2>
  </div>
  <div class="body">
    <p class="description">{episode.description}</p>
    <div class="buttons">
      <PlayButton client:load audioUrl={episode.audio_preview_url} />
      <Button negative link={episode.external_urls.spotify}>Listen on Spotify</Button>
    </div>
  </div>
</div>