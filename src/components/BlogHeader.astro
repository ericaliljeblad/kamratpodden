<style>
	header {
		position: relative;
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 15px;
		/* justify-content: space-between; */
		width: 100%;
		padding: 50px 0 100px;
		overflow: hidden;
		text-align: center;
		/* height: 50vh; */
	}

	header::after {
		content: '';
		position: absolute;
		display: block;
		/* background: rgba(var(--color-blue-rgb), 0.1); */
		background: rgb(240, 240, 240);
		/* background: linear-gradient(rgba(var(--color-blue-rgb), 0.1), white); */
		height: 130%;
		width: 200vw;
		left: -50vw;
		top: -50%;
		transform: rotate(-7deg);
		z-index: -1;
	}

	.logo-link:hover, .logo-link:focus {
		border: none;
		outline: none;
	}

	.logo {
		width: 250px;
		object-fit: contain;
	}

	.label {
		text-transform: uppercase;
		color: #888;
		/* var(--color-blue); */
		font-size: 13px;
		letter-spacing: 1px;
		font-weight: bold;
	}

	h1 {
		margin: 0;
		font-size: 35px;
		line-height: 1;
		color: var(--color-blue);
	}

	@media (min-width: 37.75em) {
		header {
			flex-direction: row;
			justify-content: center;
			gap: 80px;
			text-align: left;
		}

		.logo {
			width: 350px;
		}

		.label {
			font-size: 15px;
		}

		h1 {
			font-size: 80px;
		}
	}

</style>

