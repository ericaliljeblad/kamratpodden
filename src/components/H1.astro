---
const { negative, small } = Astro.props;
---
<h1 class:list={[{ negative: negative, small: small }]}>
	<slot />
</h1>

<style lang="scss">
	h1 {
    margin: 0;
		font-size: 50px;
		line-height: 1;
		font-weight: 700;
		color: rgba(17, 24, 39, 0.8);

    @media (min-width: 604px) {
      font-size: 60px;
			color: rgba(17, 24, 39, 0.8);
  	}

    @media (min-width: 1100px) {
      font-size: 80px;
    }
	}

  h1.negative {
    color: var(--color-white);
  }

  h1.small {
    font-size: 38px;

    @media (min-width: 37.75em) {
      font-size: 50px;
    }
  }
</style>
