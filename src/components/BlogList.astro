---
import BlogPostPreview from '../components/BlogPostPreview.astro';
import Label from '../components/Label.astro';
import Button from '../components/Button.astro';
const { posts, readmore, label } = Astro.props;
---

<style lang="scss">
	.label  {
		margin-bottom: 15px;

		@media (min-width: 800px) {
			margin-bottom: -5px;
		}
	}

	.readmore {
		display: flex;
		justify-content: center;
		padding: 20px 0 40px;

		@media (min-width: 800px) {
			padding: 20px 0 80px;
		}
	}
	.blog-preview-list {
		margin: -20px auto 20px;

		@media (min-width: 800px) {
			display: grid;
			gap: 20px;
			grid-template-columns: repeat(2, 1fr);
			margin: 0 auto 60px;
		}
	}
</style>

<section aria-label="Blog post list">
	<div class="wrapper blog-preview-list">
		{label && <Label class="label">{label}</Label>}
  	{posts.map((p, i) => <BlogPostPreview post={p} large={i === 0} />)}
	</div>
	{readmore &&
		<div class="readmore">
			<Button link="/posts">
				Alla inl√§gg
			</Button>
		</div>
	}
</section>